name "minivm-paka"
description "paka-remix"
authors "Shaw Summa"
copyright "Copyright Â© 2022, Shaw Summa"
license "MIT"
buildType "tsan" {
	dflags "-g" "-fsanitize=thread"
	preBuildCommands "cd minivm && make -Bj bin/libminivm.a OPT='-g3 -fsanitize=thread -fno-sanitize=leak'"
}
buildType "asan" {
	dflags "-g" "-fsanitize=address"
	preBuildCommands "cd minivm && make -Bj bin/libminivm.a OPT='-g3 -fsanitize=address -fno-sanitize=leak'"
}
buildType "debug" {
	dflags "-g"
	preBuildCommands "cd minivm && make -Bj bin/libminivm.a OPT='-g3'"
}
buildType "release" {
	preBuildCommands "cd minivm && make -Bj bin/libminivm.a OPT='-O3 -ffast-math -fomit-frame-pointer'"
}
dependency "raylib-d" version="~>4.2.0"
lflags "minivm/bin/libminivm.a" "minivm/bin/libminivm.a"
lflags "-l:libraylib.a"
sourcePaths "paka"
stringImportPaths "paka"
