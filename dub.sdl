name "minivm-paka"
description "paka-remix"
authors "Shaw Summa"
copyright "Copyright Â© 2022, Shaw Summa"
license "MIT"
lflags "minivm/bin/libminivm.a"
sourcePaths "paka"
stringImportPaths "paka"
lflags "minivm/bin/libminivm.a"
buildType "release" {
    preBuildCommands "cd minivm && make -Bj bin/libminivm.a"
}
buildType "debug" {
    dflags "-fsanitize=address"
    preBuildCommands "cd minivm && make -Bj bin/libminivm.a OPT='-g3 -fsanitize=address'"
}